    <div class="forms">
        <div class="form-content">
          <div class="login-form">
            <div class="title">Giriş Sayfası</div>
              <form method="post">
                <div class="input-boxes">
                  <div class="input-box">
                    <i class="fas fa-envelope"></i>
                    <input type="text" asp-for="Username" placeholder="Kullanıcı adınızı giriniz" required>
                  </div>
                  <div class="input-box">
                    <i class="fas fa-lock"></i>
                    <input type="password" asp-for="Password" placeholder="Şifrenizi giriniz" required>
                  </div>
                  <div class="text"><a href="#">Şifremi unuttum!</a></div>
                  <div class="button input-box">
                    <input type="submit" value="Giriş Yap">
                  </div>
                  <a href="/Register/Index/">
                        <div class="text sign-up-text">Hesabınız yok mu? <label>Kayıt ol.</label></div>
                  </a>
            
                </div>
             </form>
      </div>
