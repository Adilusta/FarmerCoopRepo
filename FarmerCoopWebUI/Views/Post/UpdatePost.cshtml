
@model UpdatePostDto

@{
    ViewData["Title"] = "UpdatePost";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Ürün İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Gönderi Güncelleme Sayfası</div>
                        </div>
                        <input type="hidden" asp-for="PostID" />
                        <div class="card-body">
                            <div class="form-group">
                                <label for="productname">Gönderi Başlığını Giriniz</label>
                                <input type="text" class="form-control" asp-for="PostTitle" id="posttitle">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="price">Gönderinin İçeriğini Yazın</label>
                                <textarea class="form-control" asp-for="PostContent" rows="7"> </textarea>
                               @* <input type="text" class="form-control" asp-for="PostContent" id="content">*@
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="imageurl">Ürün Görselini Giriniz</label>
                                <input type="text" class="form-control" asp-for="ImageURL" id="imageurl">
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-primary">Gönderiyi Güncelle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


