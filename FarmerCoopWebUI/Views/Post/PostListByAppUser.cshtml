
@model List<ResultPostDto>
@{
    ViewData["Title"] = "PostListByAppUser";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<h1>Gönderileriniz</h1>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Gönderi Başlığı</th>
        <th>Oluşturulma Tarihi</th>
        <th>Durum</th>
        <th>Sil</th>
        <th>Düzenle</th>
    </tr>
    @foreach (var item in Model)
   {
       <tr>
           <th>@item.PostID</th>
           <td>@item.PostTitle</td>
           <td>@(((DateTime)item.CreateDate).ToString("dd-MMM-yyyy"))</td>
            <td>

         
           @if (item.PostStatus )
            {
            <span class="badge badge-success">Aktif</span>
            }
            @if (!item.PostStatus)
            {
            <span class="badge badge-secondary">Pasif</span>
            }
                 </td>
           @*<td>@item.BlogStatus</td>*@
             
           <td> 
                       <a href="/Post/DeletePost/@item.PostID/"class="btn btn-danger"
                   onclick="return confirm('Silmek istediğine emin misin?');" >  Sil </a>     
           
                 
           </td>
                
           <td> 
               <a href="/Post/EditPost/@item.PostID/" class="btn btn-warning"> Düzenle </a> 
               </td>

             
       </tr>
   }
</table>
<a href="/Post/AddPost/" class="btn btn-primary"> Yeni Gönderi Oluştur </a>

